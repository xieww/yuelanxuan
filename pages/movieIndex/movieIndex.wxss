swiper {
  width: 100%;
  height: 400rpx;
}

swiper image {
  width: 100%;
  height: 400rpx;
}

.movie-list {
  box-sizing: border-box;
  background-color: #F0F0F0;
}

.movie-items {
  display: flex;
  flex-direction: column;
  cursor: pointer;
  font-size: 25rpx;
  margin: 25rpx 0;
  padding: 20rpx;
  background-color: #fff;
}

.movie-items .title {
  display: flex;
  margin-bottom: 10rpx;
  width: 100%;
}

.movie-items .title text {
  flex: 1;
}

.movie-items .title image {
  height: 30rpx;
  width: 30rpx;
}

.movie-list .movies-item {
  height: 350rpx;
}

.movie-list .movies-item .movies-item-1 {
  display: flex;
  flex-direction: row;
  height: 300rpx;
  width: 900rpx;
}

